-- [queryProvinceNameAndProvinceCode]
SELECT PROVINCE_NAME,PROVINCE_CODE FROM TF_M_PROVINCE ORDER BY ORDER_NUMBER

-- [queryCityNameAndCityCode]
SELECT CITY_NAME,CITY_CODE FROM TF_M_CITY WHERE PROVINCE_CODE = ## ORDER BY ORDER_NUMBER

-- [queryDistrictNameAndDistrictCode]
SELECT DISTRICT_NAME,DISTRICT_CODE FROM TF_M_DISTRICT WHERE CITY_CODE = ## ORDER BY ORDER_NUMBER